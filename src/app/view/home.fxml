<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="app.controller.HomeController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="25" bottom="10" left="25"/>
    </padding>

    <Label text="Paste your code : "
           GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <TextArea fx:id="codeArea" promptText="Paste your code..."
              prefHeight="400"
              GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Button GridPane.columnIndex="0" GridPane.rowIndex="2" text="Lexical analyse"
            onAction="#onAnalysis"/>

</GridPane>